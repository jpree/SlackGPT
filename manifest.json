{
    "display_information": {
        "name": "SlackGPT",
        "description": "Generative AI for Slack",
        "background_color": "#474247",
        "long_description": "An intelligent generative AI built on OpenAI's GPT3.5."
    },
    "features": {
        "bot_user": {
            "display_name": "SlackGPT",
            "always_online": false
        }
    },
    "oauth_config": {
        "scopes": {
            "bot": [
                "app_mentions:read",
                "channels:history",
                "channels:read",
                "chat:write",
                "chat:write.public",
                "im:history",
                "im:read",
                "groups:history",
                "mpim:history",
                "mpim:read",
                "mpim:write"
            ]
        }
    },
    "settings": {
        "event_subscriptions": {
            "bot_events": [
                "app_mention",
                "message.im"
            ]
        },
        "interactivity": {
            "is_enabled": true
        },
        "org_deploy_enabled": false,
        "socket_mode_enabled": true,
        "token_rotation_enabled": false
    }
}